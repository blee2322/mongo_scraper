<nav class="navbar navbar-default navbar-static-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="btn btn-default navbar-btn">Scrape New Articles</button>
      <div class="navbar-brand">
        <p>Mongo Scraper</p.
      </div>
    </div>
    <p class='navbar-text'>Home</p>
    <p class='navbar-text'>Saved Articles</p>
  </div>
</nav>

<div class='container'>
  <div class='col-md-12 jumbotron'>
    <div class='text-center'>
      <h1> NYT Mongo Scaper</h1>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-12'>
      {{#if article}}
        {{#each article}}
          <div class='panel panel-default'>
            <div class='panel-heading'>
              <h3>{{this.title}}</h3>
            </div>
            <div class='panel-body'>
              <p>{{this.summary}}</p>
              <a href={{this.link}} target="_blank">{{this.link}}</a>
              <br><br>
              <button type='button' class='btn btn-success addNote' data-toggle='modal' data-target='#noteModal{{this._id}}' data-id={{this._id}}>Add Note</button>
              <button type='button' class='btn btn-danger delete' data-id={{this._id}}>Delete</button>
            </div>
          </div>
          </div>
        {{/each}}
      {{else}}
      <div class ='panel panel-default'>
        <div class='panel-body'>
          <h4> No New Articles To Add</h4>
        </div>
      </div>
      {{/if}}
    </div>
  </div>
</div>

{{#each article}}
  {{>note-modal}}
{{/each}}